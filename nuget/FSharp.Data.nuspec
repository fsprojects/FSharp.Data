<?xml version="1.0" encoding="utf-8"?>
<package xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <metadata xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <id>@project@</id>
    <title>F# Data</title>
    <version>@build.number@</version>
    <authors>@authors@</authors>
    <owners>@authors@</owners>
    <licenseUrl>http://github.com/fsharp/FSharp.Data/blob/master/LICENSE.md</licenseUrl>
    <projectUrl>http://fsharp.github.io/FSharp.Data</projectUrl>
    <iconUrl>https://raw.github.com/fsharp/FSharp.Data/master/misc/logo.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <summary>@summary@</summary>
    <description>@description@</description>
    <releaseNotes>@releaseNotes@</releaseNotes>
    <copyright>Copyright 2018</copyright>
    <tags>@tags@</tags>
    <dependencies>
      <group targetFramework="net45">
        <dependency id="FSharp.Core" version="4.0.0.1"/>
      </group>
      <group targetFramework="netstandard2.0">
        <dependency id="FSharp.Core" version="4.3.4" />
      </group>
    </dependencies>
    <references>
      <reference file="FSharp.Data.dll" />
    </references>
    <frameworkAssemblies>
      <frameworkAssembly assemblyName="System.Xml.Linq" targetFramework="net45" />
    </frameworkAssemblies>
  </metadata>
  <files>
    <!-- Place the TPRTCs in the usual locations --> 
    <file src="..\bin\lib\net45\FSharp.Data.dll" target="lib/net45" />
    <file src="..\bin\lib\net45\FSharp.Data.pdb" target="lib/net45" />
    <file src="..\bin\lib\net45\FSharp.Data.xml" target="lib/net45" />
    <file src="..\bin\lib\netstandard2.0\FSharp.Data.dll" target="lib/netstandard2.0" />
    <file src="..\bin\lib\netstandard2.0\FSharp.Data.pdb" target="lib/netstandard2.0" />
    <file src="..\bin\lib\netstandard2.0\FSharp.Data.xml" target="lib/netstandard2.0" />

    <!-- Place the TPDTC in the legacy location alongside FSharp.Data --> 
    <file src="..\bin\lib\net45\FSharp.Data.DesignTime.dll" target="lib/net45" />
    <file src="..\bin\lib\net45\FSharp.Data.DesignTime.pdb" target="lib/net45" />
    <file src="..\bin\lib\netstandard2.0\FSharp.Data.DesignTime.dll" target="lib/netstandard2.0" />
    <file src="..\bin\lib\netstandard2.0\FSharp.Data.DesignTime.pdb" target="lib/netstandard2.0" />

    <!-- Place the TPDTC in the future-proof location --> 
    <file src="..\bin\typeproviders\fsharp41\net45\FSharp.Data.DesignTime.dll" target="typeproviders/fsharp41/net45" />
    <file src="..\bin\typeproviders\fsharp41\net45\FSharp.Data.DesignTime.pdb" target="typeproviders/fsharp41/net45" />
    <file src="..\bin\typeproviders\fsharp41\netstandard2.0\FSharp.Data.DesignTime.dll" target="typeproviders/fsharp41/netstandard2.0" />
    <file src="..\bin\typeproviders\fsharp41\netstandard2.0\FSharp.Data.DesignTime.pdb" target="typeproviders/fsharp41/netstandard2.0" />

    <file src="linqpad-samples\*.*" target="linqpad-samples" />
  </files>
</package>
